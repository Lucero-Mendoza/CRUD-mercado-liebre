<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">

			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->

			<% for (let i = 0 ; i < productoVisitado.length ; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= productoVisitado[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productoVisitado[i].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= (productoVisitado[i].price).toLocaleString('en-US', {minimumFractionDigits:2}) %></h2>
							<span><%= productoVisitado[i].discount %> % OFF</span>
							<p><%= productoVisitado[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">

			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<% for (let i = 0 ; i < productoEnVenta.length ; i++) { %>
			<!-- Show the "in-sale" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= productoEnVenta[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= productoEnVentai].image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= (productoEnVenta[i].price).toLocaleString('en-US', {minimumFractionDigits:2}) %></h2>
							<span><%= productoEnVenta[i].discount %> % OFF</span>
							<p><%= productoEnVenta[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>