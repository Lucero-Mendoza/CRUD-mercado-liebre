<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<% for (let i = 0 ; i < detalleProducto.length ; i++) { %>
<%- include('partials/head', {title: detalleProducto[i].name }) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle del producto: <%= detalleProducto[i].name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/products/<%= detalleProducto[i].image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= detalleProducto[i].description %>
					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= detalleProducto[i].name %></h2>
						
						<% if(detalleProducto[i].discount != 0) { %>

							<p class="product-detail-price small">
								<span>$ <%= (detalleProducto[i].price).toLocaleString('en-US', {minimumFractionDigits:2}) %></span>
								/
								<b><%= detalleProducto[i].discount %> % OFF</b>
							</p>
							<p class="product-detail-price">
								Precio final
							</p>
							<p class="product-detail-price">
								$ <%= (detalleProducto[i].price -(detalleProducto[i].price * detalleProducto[i].discount * 0.01)).toLocaleString('en-US', {minimumFractionDigits:2}) %>
							</p>
						<% } else { %> 
							<p class="product-detail-price">
								Precio
							</p>
							<p class="product-detail-price">
								$ <%= (detalleProducto[i].price).toLocaleString('en-US', {minimumFractionDigits:2}) %>
							</p>
						<% } %>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pag√° en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="buy-now-button">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%= detalleProducto[i].id %>" class="action-button edit">EDITAR PRODUCTO</a>
						<form action="/products/delete/<%= detalleProducto[i].id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="action-button delete">ELIMINAR</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<% } %>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>